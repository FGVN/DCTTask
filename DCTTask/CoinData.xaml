<UserControl x:Class="DCTTask.CoinData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Define the layout for the CoinData user control -->
    <UserControl.Resources>
        <!-- Custom Button Style -->
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="DodgerBlue" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="RoyalBlue" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <!-- Navigation Bar -->
        <Grid Background="DodgerBlue" VerticalAlignment="Top" Height="40">
            <!-- Back Button -->
            <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0" Click="BackButton_Click" Style="{StaticResource CustomButtonStyle}" />
            <!-- Title -->
            <TextBlock Text="{Binding name}" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>

        <!-- Coin Data Content -->
        <StackPanel Margin="20,60">
            <!-- Add controls for displaying coin details -->
            <TextBlock Text="Symbol: " />
            <TextBlock Text="{Binding symbol}" FontSize="16" Margin="0,5" />
            <TextBlock Text="Price in USD: " />
            <TextBlock Text="{Binding priceUsd}" FontSize="16" Margin="0,5" />
            <TextBlock Text="24 Hour volume: " />
            <TextBlock Text="{Binding volumeUsd24Hr}" FontSize="16" Margin="0,5" />
            <TextBlock Text="24 houre price change in %: " />
            <TextBlock Text="{Binding changePercent24Hr}" FontSize="16" Margin="0,5" />
            <!-- Add more controls for other coin details -->
        </StackPanel>
    </Grid>
</UserControl>
