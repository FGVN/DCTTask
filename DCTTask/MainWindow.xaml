<Window x:Class="DCTTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cryptocurrency Data" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="cryptoDataGrid" AutoGenerateColumns="True" SelectionChanged="cryptoDataGrid_SelectionChanged">
            <!-- You can customize the appearance of the DataGrid here -->
        </DataGrid>

        <!-- Previous Button -->
        <Button Content="Previous" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,10,0,10" Click="PreviousButton_Click"/>

        <!-- Next Button -->
        <Button Content="Next" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,10,10" Click="NextButton_Click"/>
    </Grid>
</Window>
